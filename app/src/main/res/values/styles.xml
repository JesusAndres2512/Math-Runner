<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Botón azul (acciones principales como JUGAR, PUNTAJES ALTOS) -->
    <style name="BlueButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#2196F3</item> <!-- Azul Material -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/rounded_blue_button</item>
    </style>

    <!-- Botón gris (secundario, como CONFIGURACIÓN o VOLVER) -->
    <style name="GrayButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#9E9E9E</item> <!-- Gris Material -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/rounded_gray_button</item>
    </style>



</resources>
