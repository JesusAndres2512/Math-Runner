<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <alpha
        android:duration="100"
        android:fromAlpha="1.0"
        android:toAlpha="0.4"
        android:repeatCount="3"
        android:repeatMode="reverse" />
    <rotate
        android:fromDegrees="-5"
        android:toDegrees="5"
        android:pivotX="50%"
        android:pivotY="50%"
        android:duration="100"
        android:repeatCount="3"
        android:repeatMode="reverse" />
</set>
